rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Daily Plans Collection
    match /daily_plans/{planId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    // Weekly Plans Collection
    match /weekly_plans/{planId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    // Monthly Plans Collection
    match /monthly_plans/{planId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    // Subjects Collection
    match /subjects/{subjectId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    // Weekly Timetable (user scoped)
    match /users/{userId}/weekly_timetable/{entryId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Backlog Tasks (user scoped)
    match /users/{userId}/backlog_tasks/{taskId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Study Resources (user scoped)
    match /users/{userId}/study_resources/{resourceId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Notification Logs
    match /notification_logs/{logId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    // Calendar Sync Settings (user scoped)
    match /users/{userId}/calendar_sync_settings/{document} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Sync Log (user scoped)
    match /users/{userId}/sync_log/{logId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
  }
}
